<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm">
<div class="row">
<div class="col-lg-3">

  <h1>User info</h1>
  <table class="table">
  <tbody>
    <%= image_tag @user.get_profile_image(100,100) %>
    <tr>
      <th>name</th>
	    <th><%= @user.name %></th>
    </tr>
    <tr>
	    <th>introduction</th>
	    <th><%= @user.introduction %></th>
    </tr>
  </tbody>
  </table>
   <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  <div class="container">
  <div class="row">
  <div class="col-lg-4">
  <h1>New Book</h1>
  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
      <%= f.text_field :book_title %>
    <h4>Opinion</h4>
      <%= f.text_area :caption %>
     <br>
       <%= f.submit 'create' ,class: "btn btn-success" %>
     </br>
  <% end %>
  </div>
<div class="col-lg-8">
  <h2>Books</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do | book | %>
      <tr>
        <td><%= book.book_title %></td>
        <td><%= book.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
