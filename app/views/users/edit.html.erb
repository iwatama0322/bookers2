<h2>User info</h2>
<%= form_with model: @user do |f| %>
<br> <label for="inputName">Name</label></br>
<br> <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
<br> <label for="inputImage">Image</label></br>
<br><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
<br><label for="user_introduction">Introduction</label></br>
<br><%= f.text_area :body %></br>
<br><%= f.submit "Update User" %></br>
<% end %>
