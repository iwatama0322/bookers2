<%= render 'list', book: @book, user: @user %>
<div class="col-md-8 offset-md-1">
<div class="row">
  <h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do | book | %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.book_title , book_path(book.id) %></td>
        <td><%= book.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
